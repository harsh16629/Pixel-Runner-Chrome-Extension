{
  "manifest_version": 3,
  "name": "Ceiling Walker Prototype",
  "version": "1.2",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["running-standard.gif", "standing-old.png", "jumping-old.gif", "midair-old.png", "land-old.png"],
      "matches": ["<all_urls>"]
    }
  ]
}